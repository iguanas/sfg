# ===========================================
# Set Forget Grow Onboarding - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# -------------------------------------------
# Database (Supabase)
# -------------------------------------------
# Get these from your Supabase project settings
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres"

# -------------------------------------------
# Authentication (NextAuth.js)
# -------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# -------------------------------------------
# OpenAI (for Whisper voice transcription)
# -------------------------------------------
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# -------------------------------------------
# Google AI (for Gemini conversation)
# -------------------------------------------
# Get from: https://aistudio.google.com/app/apikey
# Uses Gemini 2.0 Flash for fast, high-quality responses
GOOGLE_API_KEY="AIza..."

# -------------------------------------------
# Google Places API
# -------------------------------------------
# Get from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Places API (New)
GOOGLE_PLACES_API_KEY="AIza..."

# -------------------------------------------
# WHOIS API (for domain registrar detection)
# -------------------------------------------
# Options: whoisxmlapi.com, ip2whois.com, or similar
# Get from: https://whoisxmlapi.com/
WHOIS_API_KEY=""

# -------------------------------------------
# Namecheap API (for domain registration)
# -------------------------------------------
# Get from: https://www.namecheap.com/support/api/intro/
NAMECHEAP_API_USER=""
NAMECHEAP_API_KEY=""
NAMECHEAP_USERNAME=""
NAMECHEAP_SANDBOX="true"  # Set to "false" for production

# -------------------------------------------
# Cloudflare R2 (for photo storage)
# -------------------------------------------
# Get from: Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="sfg-onboarding"
R2_PUBLIC_URL=""  # e.g., https://your-bucket.r2.dev

# -------------------------------------------
# Encryption (for credential vault)
# -------------------------------------------
# Generate with: openssl rand -base64 32
# CRITICAL: Keep this secret and back it up!
# Losing this key means losing access to all stored credentials
ENCRYPTION_MASTER_KEY=""
ENCRYPTION_KEY_VERSION="1"

# -------------------------------------------
# Notifications
# -------------------------------------------
# Slack incoming webhook URL
# Create at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=""

# Optional: Email notifications via Resend
# Get from: https://resend.com/
RESEND_API_KEY=""
NOTIFICATION_EMAIL_FROM="onboarding@setforgetgrow.com"

# -------------------------------------------
# Application Settings
# -------------------------------------------
# The email that will receive delegate access for domains
DELEGATION_EMAIL="access@setforgetgrow.com"

# Maximum voice recording duration in seconds
MAX_VOICE_DURATION="60"

# Session expiry in hours (for abandoned sessions)
SESSION_EXPIRY_HOURS="24"
